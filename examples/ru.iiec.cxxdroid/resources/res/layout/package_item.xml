<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name"/>
            <TextView android:id="@+id/version" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Version: 0.1.0"/>
            <TextView android:id="@+id/pkg_size" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Package size: 7Mb"/>
            <TextView android:id="@+id/size" android:paddingTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Size: 10Mb"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Space android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"/>
            <Button android:id="@+id/update" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update"/>
            <Button android:id="@+id/uninstall" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/uninstall"/>
            <Button android:id="@+id/install" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/install"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:id="@+id/description" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Description asdadvdsvdv\10dsfgdsfgdfgds\10gfs\10dfgsdfgsdgsd"/>
</LinearLayout>
