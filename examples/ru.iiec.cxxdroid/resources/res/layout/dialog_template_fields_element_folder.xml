<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/text_view" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.3"/>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.7">
        <EditText android:id="@+id/edit_text" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1" android:inputType="textNoSuggestions" android:imeOptions="actionDone"/>
        <androidx.appcompat.widget.AppCompatImageButton android:id="@+id/folder_button" android:background="?android:attr/selectableItemBackground" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_folder_open_24dp"/>
    </LinearLayout>
</LinearLayout>
