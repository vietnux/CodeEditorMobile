<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/screen_preferences" android:key="screen">
        <ListPreference android:entries="@array/entries_statusbar_preference" android:title="@string/title_statusbar_preference" android:key="statusbar" android:summary="@string/summary_statusbar_preference" android:defaultValue="@string/pref_statusbar_default" android:dialogTitle="@string/dialog_title_statusbar_preference" android:entryValues="@array/entryvalues_statusbar_preference"/>
        <ListPreference android:entries="@array/entries_actionbar_preference" android:title="@string/title_actionbar_preference" android:key="actionbar" android:summary="@string/summary_actionbar_preference" android:defaultValue="@integer/pref_actionbar_default" android:dialogTitle="@string/dialog_title_actionbar_preference" android:entryValues="@array/entryvalues_actionbar_preference"/>
        <ListPreference android:entries="@array/entries_orientation_preference" android:title="@string/title_orientation_preference" android:key="orientation" android:summary="@string/summary_orientation_preference" android:defaultValue="@integer/pref_orientation_default" android:dialogTitle="@string/dialog_title_orientation_preference" android:entryValues="@array/entryvalues_orientation_preference"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/text_preferences">
        <ListPreference android:entries="@array/entries_fontsize_preference" android:title="@string/title_fontsize_preference" android:key="fontsize" android:summary="@string/summary_fontsize_preference" android:defaultValue="@string/pref_fontsize_default" android:dialogTitle="@string/dialog_title_fontsize_preference" android:entryValues="@array/entryvalues_fontsize_preference"/>
        <ListPreference android:entries="@array/entries_color_preference" android:title="@string/title_color_preference" android:key="color" android:summary="@string/summary_color_preference" android:defaultValue="@string/pref_color_default" android:dialogTitle="@string/dialog_title_color_preference" android:entryValues="@array/entryvalues_color_preference"/>
        <CheckBoxPreference android:title="@string/title_utf8_by_default_preference" android:key="utf8_by_default" android:summary="@string/summary_utf8_by_default_preference" android:defaultValue="@bool/pref_utf8_by_default_default"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/keyboard_preferences">
        <ListPreference android:entries="@array/entries_backaction_preference" android:title="@string/title_backaction_preference" android:key="backaction" android:summary="@string/summary_backaction_preference" android:defaultValue="@string/pref_backaction_default" android:dialogTitle="@string/dialog_title_backaction_preference" android:entryValues="@array/entryvalues_backaction_preference"/>
        <ListPreference android:entries="@array/entries_controlkey_preference" android:title="@string/title_controlkey_preference" android:key="controlkey" android:summary="@string/summary_controlkey_preference" android:defaultValue="@string/pref_controlkey_default" android:dialogTitle="@string/dialog_title_controlkey_preference" android:entryValues="@array/entryvalues_controlkey_preference"/>
        <ListPreference android:entries="@array/entries_fnkey_preference" android:title="@string/title_fnkey_preference" android:key="fnkey" android:summary="@string/summary_fnkey_preference" android:defaultValue="@string/pref_fnkey_default" android:dialogTitle="@string/dialog_title_fnkey_preference" android:entryValues="@array/entryvalues_fnkey_preference"/>
        <ListPreference android:entries="@array/entries_ime_preference" android:title="@string/title_ime_preference" android:key="ime" android:summary="@string/summary_ime_preference" android:defaultValue="@string/pref_ime_default" android:dialogTitle="@string/dialog_title_ime_preference" android:entryValues="@array/entryvalues_ime_preference"/>
        <CheckBoxPreference android:title="@string/alt_sends_esc" android:key="alt_sends_esc" android:defaultValue="@bool/pref_alt_sends_esc_default" android:summaryOn="@string/alt_sends_esc_summary_on" android:summaryOff="@string/alt_sends_esc_summary_off"/>
        <CheckBoxPreference android:title="@string/title_use_keyboard_shortcuts" android:key="use_keyboard_shortcuts" android:defaultValue="@bool/pref_use_keyboard_shortcuts_default" android:summaryOn="@string/use_keyboard_shortcuts_summary_on" android:summaryOff="@string/use_keyboard_shortcuts_summary_off"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/shell_preferences">
        <ListPreference android:entries="@array/entries_termtype_preference" android:title="@string/title_termtype_preference" android:key="termtype" android:summary="@string/summary_termtype_preference" android:defaultValue="@string/pref_termtype_default" android:dialogTitle="@string/dialog_title_termtype_preference" android:entryValues="@array/entries_termtype_preference"/>
        <CheckBoxPreference android:title="@string/title_mouse_tracking_preference" android:key="mouse_tracking" android:summary="@string/summary_mouse_tracking_preference" android:defaultValue="@bool/pref_mouse_tracking_default"/>
        <CheckBoxPreference android:title="@string/title_verify_path_preference" android:key="verify_path" android:summary="@string/summary_verify_path_preference" android:defaultValue="@bool/pref_verify_path_default"/>
        <CheckBoxPreference android:title="@string/title_do_path_extensions_preference" android:key="do_path_extensions" android:summary="@string/summary_do_path_extensions_preference" android:defaultValue="@bool/pref_do_path_extensions_default"/>
        <CheckBoxPreference android:title="@string/title_allow_prepend_path_preference" android:key="allow_prepend_path" android:summary="@string/summary_allow_prepend_path_preference" android:dependency="do_path_extensions" android:defaultValue="@bool/pref_allow_prepend_path_default"/>
        <EditTextPreference android:title="@string/title_home_path_preference" android:key="home_path" android:summary="@string/summary_home_path_preference"/>
    </PreferenceCategory>
</PreferenceScreen>
